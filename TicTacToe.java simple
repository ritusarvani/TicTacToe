import java.util.Scanner;

public class TicTacToe {

    static char[][] board = new char[3][3];
    static Scanner sc = new Scanner(System.in);

    static String playerX;
    static String playerO;

    public static void main(String[] args) {

        System.out.println("===== TIC TAC TOE =====");
        System.out.println("Enter row and column values between 0 and 2");
        System.out.println("Example: 0 1 means row 0 and column 1");
        System.out.println();

        System.out.print("Enter Player 1 name (X): ");
        playerX = sc.nextLine();

        System.out.print("Enter Player 2 name (O): ");
        playerO = sc.nextLine();

        initializeBoard();
        startGame();

        System.out.println("Thanks for playing!");
    }

    static void initializeBoard() {
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                board[i][j] = ' ';
            }
        }
    }

    static void startGame() {

        char symbol = 'X';
        String currentPlayer = playerX;

        while (true) {

            printBoard();
            System.out.println(currentPlayer + "'s turn (" + symbol + ")");

            int row, col;

            while (true) {
                System.out.print("Enter row and column: ");
                row = sc.nextInt();
                col = sc.nextInt();

                if (isValidMove(row, col)) {
                    board[row][col] = symbol;
                    break;
                } else {
                    System.out.println("Invalid move. Try again.");
                }
            }

            if (checkWinner(symbol)) {
                printBoard();
                System.out.println(currentPlayer + " wins!");
                break;
            }

            if (isBoardFull()) {
                printBoard();
                System.out.println("Match draw!");
                break;
            }

            if (symbol == 'X') {
                symbol = 'O';
                currentPlayer = playerO;
            } else {
                symbol = 'X';
                currentPlayer = playerX;
            }
        }
    }

    static void printBoard() {
        System.out.println();
        System.out.println("  0   1   2");

        for (int i = 0; i < 3; i++) {
            System.out.print(i + " ");
            for (int j = 0; j < 3; j++) {
                System.out.print(board[i][j]);
                if (j < 2) System.out.print(" | ");
            }
            System.out.println();
            if (i < 2) System.out.println(" ---+---+---");
        }
        System.out.println();
    }

    static boolean isValidMove(int row, int col) {
        if (row < 0 || row > 2 || col < 0 || col > 2) {
            return false;
        }
        if (board[row][col] != ' ') {
            return false;
        }
        return true;
    }

    static boolean checkWinner(char s) {

        for (int i = 0; i < 3; i++) {
            if (board[i][0] == s && board[i][1] == s && board[i][2] == s)
                return true;
        }

        for (int j = 0; j < 3; j++) {
            if (board[0][j] == s && board[1][j] == s && board[2][j] == s)
                return true;
        }

        if (board[0][0] == s && board[1][1] == s && board[2][2] == s)
            return true;

        if (board[0][2] == s && board[1][1] == s && board[2][0] == s)
            return true;

        return false;
    }

    static boolean isBoardFull() {
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (board[i][j] == ' ')
                    return false;
            }
        }
        return true;
    }
}
